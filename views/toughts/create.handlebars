<!-- Formulário para criar um novo pensamento -->
<div class="tought-form-container">
    <a href="/toughts/dashboard">Voltar</a>

    <h1>Criando um Pensamento:</h1>
    
    <!-- Envia o título do pensamento via POST -->
    <form action="/toughts/add" method="post">
      <div class="form-control">
          <label for="title">Pensamento</label>
          <input type="text" name="title" placeholder="Digite um pensamento...">
      </div>
      <input type="submit" value="Criar pensamento">
    </form>
</div>
