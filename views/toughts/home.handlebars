<!-- Página inicial com busca de pensamentos -->
<div class="home-header">

  <!-- Verifica se existe uma busca ativa -->
  {{#if search}}
    <h1>Você está buscando por: <span>{{search}}</span></h1>

    <!-- Mostra a quantidade de pensamentos encontrados -->
    {{#if toughtsQty}}
      <p>Foram encontrados <span>{{toughtsQty}}</span> pensamentos</p>
    {{else}}
      <p>Nenhum pensamento foi encontrado para o termo <span>{{search}}</span></p>
    {{/if}}

  {{else}}
    <h1>Conheça alguns dos nossos <span>Pensamentos</span>:</h1>
  {{/if}}

  <!-- Campo de busca -->
  <form action="/" method="get">
    <input type="text" name="search" placeholder="Está buscando por algo?">
    <input type="submit" class="btn" value="Buscar">
  </form>

  <!-- Ordenação de pensamentos -->
  <div class="order-container">
    <span>Ordenar por:</span>

    <!-- Mais recentes -->
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}">
      <input type="hidden" name="order" value="new">
      <button type="submit"><i class="fa-solid fa-arrow-up"></i></button>
    </form>

    <!-- Mais antigos -->
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}">
      <input type="hidden" name="order" value="old">
      <button type="submit"><i class="fa-solid fa-arrow-down"></i></button>
    </form>

    <!-- Limpa a busca -->
    <a href="/">Limpar</a>
  </div>

  <!-- Listagem dos pensamentos -->
  <div class="toughts-container">
    {{#each toughts}}
      <figure>
        <blockquote>
          "{{this.title}}"
        </blockquote>
        <figcaption>por <span>{{this.User.name}}</span></figcaption>
      </figure>
    {{/each}}
  </div>
</div>
